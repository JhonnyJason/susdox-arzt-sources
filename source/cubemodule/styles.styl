/*=========================================================
 The Cube
=========================================================*/
#cube-frame
    position: absolute
    top 50%
    left 50%
    transform: translate(-50%, -50%)
    width: cube-size;
    height: cube-size;
    transform-style preserve-3d
    -webkit-transform-style preserve-3d
    perspective: perspective
    filter drop-shadow(0 0 15px alpha(black, 0.2));
    background: transparent

#cube
    position: absolute
    width: inherit
    height: inherit
    transform-style preserve-3d
    -webkit-transform-style preserve-3d
    transform scale(corrrectionScale)
    transition transform 0.6s
    background transparent
    
    .side
        width: inherit
        height: inherit
        position: absolute;
        background-color white
        transform-style preserve-3d
        -webkit-transform-style preserve-3d

    #cube-front
        transform: rotateY(0deg) translateZ(cube-size * 0.5)
    #cube-back
        transform: rotateX(180deg) translateZ(cube-size * 0.5)
    #cube-right
        transform: rotateY(90deg) translateZ(cube-size * 0.5)
    #cube-left
        transform: rotateY(-90deg) translateZ(cube-size * 0.5)
    #cube-top
        transform: rotateX(90deg) translateZ(cube-size * 0.5)
    #cube-bottom
        transform: rotateX(-90deg) translateZ(cube-size * 0.5)

    #sustsol-cube-image
        background-image: url("/img/sustsol_logo.png")
        background-size: contain
        background-repeat no-repeat
        background-position center
        width: 90%
        height 90%
        position relative
        top 5%
        left 5%

    #images-preloader
        display none
        height: 60px
        width 60px
        color cd-turquoise
        position: absolute
        top 50%
        left 50%
        transform translate(-50%, -50%) rotateZ(45deg)

    #cube-right
    #cube-front
    #cube-left
    #cube-back
    #cube-top
        img
        canvas
            width 90%
            height 90%
            object-fit: contain
            position relative
            top 5%
            left 5%
            // -webkit-touch-callout: none
